<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.3.xsd">
	<header>
		<meta name="generator" content="MODX file generated with PP MODX Creator by tumba25 (online version)"/>
		<license><![CDATA[http://opensource.org/licenses/gpl-license.php GNU General Public License v2]]></license>
		<title lang="en"><![CDATA[Option to remove Mini-Chat from index page]]></title>
		<description lang="en"><![CDATA[A mini-chat plugin.]]></description>
		<author-group>

			<author>
				<realname><![CDATA[Gio Borje]]></realname>
				<username><![CDATA[killaziller]]></username>
				<homepage><![CDATA[www.zerozaku.com]]></homepage>
				<email><![CDATA[killaziller@yahoo.com]]></email>
			</author>
		</author-group>
		<mod-version>1.0.0</mod-version>

		<installation>
			<level>easy</level>
			<time>180</time>
			<target-version>3.0.6</target-version>
		</installation>
	</header>
	<action-group>

		<open src="index.php">
			<edit>
				<find><![CDATA[if(!defined('MCHAT_INCLUDE') && $config['mchat_on_index'] && $config['mchat_enable'] && $auth->acl_get('u_mchat_view'))]]></find>
				<inline-edit>
					<inline-find><![CDATA[$auth->acl_get('u_mchat_view')]]></inline-find>
					<inline-action type="after-add"><![CDATA[ && $user->optionget('mchat')]]></inline-action>
				</inline-edit>
			</edit>
		</open>

		<open src="includes/session.php">
			<edit>
				<find><![CDATA[	var $keyoptions = array('viewimg' => 0, 'viewflash' => 1, 'viewsmilies' => 2, 'viewsigs' => 3, 'viewavatars' => 4, 'viewcensors' => 5, 'attachsig' => 6, 'bbcode' => 8, 'smilies' => 9, 'popuppm' => 10, 'viewquickreply' => 11, 'viewquickpost' => 12, 'sig_bbcode' => 15, 'sig_smilies' => 16, 'sig_links' => 17);]]></find>
				<inline-edit>
					<inline-find><![CDATA['sig_links' => 17]]></inline-find>
					<inline-action type="after-add"><![CDATA[, 'mchat'	=> 18]]></inline-action>
				</inline-edit>
			</edit>
		</open>

		<open src="includes/ucp/ucp_prefs.php">
			<edit>
				<find><![CDATA[					'images'		=> request_var('images', (bool) $user->optionget('viewimg')),]]></find>
				<action type="before-add"><![CDATA[					'mchat'			=> request_var('mchat', (bool) $user->optionget('mchat')),]]></action>
			</edit>
			<edit>
				<find><![CDATA[						$user->optionset('viewimg', $data['images']);]]></find>
				<action type="before-add"><![CDATA[						$user->optionset('mchat', $data['mchat']);]]></action>
			</edit>

			<edit>
				<find><![CDATA[					'S_IMAGES'			=> $data['images'],]]></find>
				<action type="before-add"><![CDATA[					'MCHAT_ENABLE'		=> ($config['mchat_enable']) ? true : false,

					'S_MCHAT'			=> $data['mchat'],]]></action>
			</edit>
		</open>
		<open src="language/en/common.php">
			<edit>
				<find><![CDATA[));
// END mChat Mod]]></find>
				<action type="before-add"><![CDATA[	'VIEW_MCHAT'		=> 'Display Mini-Chat on the index page',]]></action>

			</edit>
		</open>
		<open src="styles/prosilver/template/ucp_prefs_view.html">
			<edit>
				<find><![CDATA[<!-- IF ERROR --><p class="error">{ERROR}</p><!-- ENDIF -->]]></find>
				<action type="after-add"><![CDATA[		<!-- IF MCHAT_ENABLE -->
		<dl>
			<dt><label for="mchat1">{L_VIEW_MCHAT}:</label></dt>
			<dd>
				<label for="mchat1"><input type="radio" name="mchat" id="mchat1" value="1"<!-- IF S_MCHAT --> checked="checked"<!-- ENDIF --> /> {L_YES}</label> 
				<label for="mchat0"><input type="radio" name="mchat" id="mchat0" value="0"<!-- IF not S_MCHAT --> checked="checked"<!-- ENDIF --> /> {L_NO}</label>
			</dd>
		</dl>
		<!-- ENDIF -->]]></action>
			</edit>
		</open>
	</action-group>

</mod>