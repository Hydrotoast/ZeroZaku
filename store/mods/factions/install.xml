<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<?xml-stylesheet type="text/xsl" href="modx.prosilver.en.xsl"?>
<!--For security purposes, please check: http://www.phpbb.com/mods/ for the latest version of this MOD. Although MODs are checked before being allowed in the MODs Database there is no guarantee that there are no security problems within the MOD. No support will be given for MODs not found within the MODs Database which can be found at http://www.phpbb.com/mods/-->
<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.2.xsd">
	
<header>
	<license>http://www.gnu.org/licenses/gpl-2.0.txt GNU General Public License v2</license>
	<title lang="en">phpBB Factions</title>
	<description lang="en">An all-in-one clan, ladder and tournament script.</description>
	<author-group>
		<author>
			<realname>Tyler N. King</realname>
			<email>aibotca@yahoo.ca</email>
			<username>A.I. BOT</username>
			<homepage>http://www.phpbbfactions.com</homepage>	
		</author>
	</author-group>
	<mod-version>2.0.11</mod-version>
	<installation>
		<level>easy</level>
		<time>300</time>
		<target-version>3.0.4</target-version>
	</installation>
</header>
<action-group>
	<copy>
		<file from="factions_umil.php" to="YOUR UMIL INSTALLATION DIRECTORY" />
		<file from="root/*.*" to="*.*" />
	</copy>
	<open src="includes/functions.php">
		<edit>
			<find>
				<![CDATA[
		'SITENAME'						=> $config['sitename'],]]>
			</find>
			<action type="after-add">
				<![CDATA[
		'L_GROUPCP' => $user->lang[ 'FACTIONS_GROUPCP' ],
		'U_GROUPCP' => append_sid ( "{$phpbb_root_path}ucp.$phpEx", 'i=factions' ),
		'L_PLATFORMS' => $user->lang[ 'FACTIONS_PLATFORMS' ],
		'U_PLATFORMS' => append_sid ( "{$phpbb_root_path}factions.$phpEx", 'action=platforms' ),
		'L_TOURNAMENTS' => $user->lang[ 'FACTIONS_TOURNAMENTS' ],
		'U_TOURNAMENTS' => append_sid ( "{$phpbb_root_path}factions.$phpEx", 'action=tournaments' ),
		'L_ADDGROUP' => $user->lang[ 'FACTIONS_ADDGROUP' ],
		'U_ADDGROUP' => append_sid ( "{$phpbb_root_path}factions.$phpEx", 'action=add_group' ),
		'L_GROUPLIST' => $user->lang[ 'FACTIONS_GROUPLIST' ],
		'U_GROUPLIST' => append_sid ( "{$phpbb_root_path}factions.$phpEx", 'action=group_list' ),]]>
			</action>
		</edit>
	</open>
	<open src="includes/constants.php">
		<edit>
			<find>
				<![CDATA[
// Additional tables]]>
			</find>
			<action type="after-add">
				<![CDATA[
define ( 'GROUPDATA_TABLE', $table_prefix . 'factions_groupdata' );
define ( 'CHALLENGES_TABLE', $table_prefix . 'factions_challenges' );
define ( 'MATCHES_TABLE', $table_prefix . 'factions_matches' );
define ( 'LADDERS_TABLE', $table_prefix . 'factions_ladders' );
define ( 'PLATFORMS_TABLE', $table_prefix . 'factions_platforms' );
define ( 'TOURNAMENTS_TABLE', $table_prefix . 'factions_tournaments' );
define ( 'TREPORTS_TABLE', $table_prefix . 'factions_treports' );
define ( 'TGROUPS_TABLE', $table_prefix . 'factions_tgroups' );
define ( 'MATCHFINDER_TABLE', $table_prefix . 'factions_matchfinder' );
define ( 'MATCHCOMM_TABLE', $table_prefix . 'factions_matchcomm' );
define ( 'SEASONS_TABLE', $table_prefix . 'factions_seasons' );
define ( 'SEASONDATA_TABLE', $table_prefix . 'factions_seasondata' );]]>
			</action>
		</edit>
	</open>
	<open src="language/en/common.php">
		<edit>
			<find>
				<![CDATA[
	'TOPIC'				=> 'Topic',]]>
			</find>
			<action type="after-add">
				<![CDATA[
	'FACTIONS_GROUPCP' => 'Clan CP',
	'FACTIONS_PLATFORMS' => 'Ladders',
	'FACTIONS_ADDGROUP' => 'Create a Clan',
	'FACTIONS_TOURNAMENTS' => 'Tournaments',
	'FACTIONS_GROUPLIST' => 'Clan List',]]>
			</action>
		</edit>
	</open>
	<open src="styles/prosilver/template/overall_header.html">
		<edit>
			<find>
				<![CDATA[
         <ul class="linklist rightside">

				<!-- Start Ultimate Points -->
				<!-- IF S_POINTS_ENABLE -->
				<li class="icon-points"><a href="{U_POINTS}" title="{L_POINTS_EXPLAIN}">{POINTS_LINK}<!-- IF S_USER_LOGGED_IN --> [ {USER_POINTS} ] <!-- ENDIF --></a></li>
				<!-- ENDIF -->
				<!-- End Ultimate Points -->
<li class="icon-faq"><a href="{U_FAQ}" title="{L_FAQ_EXPLAIN}">{L_FAQ}</a></li>
				<!-- IF S_MCHAT_ENABLE and U_MCHAT --><li class="icon-bump"><a href="{U_MCHAT}" title="{L_MCHAT}">{L_MCHAT}</a></li><!-- ENDIF -->
				<!-- IF not S_IS_BOT -->
					<!-- IF S_DISPLAY_MEMBERLIST --><li class="icon-members"><a href="{U_MEMBERLIST}" title="{L_MEMBERLIST_EXPLAIN}">{L_MEMBERLIST}</a></li><!-- ENDIF -->
					<!-- IF not S_USER_LOGGED_IN and S_REGISTER_ENABLED and not (S_SHOW_COPPA or S_REGISTRATION) --><li class="icon-register"><a href="{U_REGISTER}">{L_REGISTER}</a></li><!-- ENDIF -->
					<li class="icon-logout"><a href="{U_LOGIN_LOGOUT}" title="{L_LOGIN_LOGOUT}" accesskey="x">{L_LOGIN_LOGOUT}</a></li>
				<!-- ENDIF -->
			</ul>

			<span class="corners-bottom"><span></span></span></div>
		</div>]]>
			</find>
			<action type="after-add">
				<![CDATA[
            <br />
         <ul class="linklist">
            <li><a href="{U_PLATFORMS}" title="{L_PLATFORMS}" class="icon-ucp">{L_PLATFORMS}</a></li>
			<li><a href="{U_GROUPLIST}" title="{L_GROUPLIST}" class="icon-ucp">{L_GROUPLIST}</a></li>
            <!-- IF S_USER_LOGGED_IN -->
            <li><a href="{U_ADDGROUP}" title="{L_ADDGROUP}" class="icon-ucp">{L_ADDGROUP}</a></li>
			<li><a href="{U_GROUPCP}" title="{L_GROUPCP}" class="icon-ucp">{L_GROUPCP}</a></li>
            <!-- ENDIF -->
            <li><a href="{U_TOURNAMENTS}" title="{L_TOURNAMENTS}" class="icon-ucp">{L_TOURNAMENTS}</a></li>
         </ul><br />]]>
			</action>
		</edit>
	</open>
	<open src="styles/subsilver2/template/overall_header.html">
		<edit>
			<find>
				<![CDATA[
               <!-- IF S_USER_LOGGED_IN -->&nbsp; &nbsp;<a href="{U_PROFILE}"><img src="{T_THEME_PATH}/images/icon_mini_profile.gif" width="12" height="13" alt="*" /> {L_PROFILE}</a><!-- ENDIF -->
            <!-- ENDIF -->
         </td>
      </tr>
      </table>
   </div>]]>
			</find>
			<action type="after-add">
			<![CDATA[<br />
		<div id="menubar">
		<a href="{U_PLATFORMS}" title="{L_PLATFORMS}"><img src="{T_THEME_PATH}/images/icon_mini_login.gif" width="12" height="13" alt="*" /> {L_PLATFORMS}</a>&nbsp; &nbsp;
		<a href="{U_GROUPLIST}" title="{L_GROUPLIST}"><img src="{T_THEME_PATH}/images/icon_mini_login.gif" width="12" height="13" alt="*" /> {L_GROUPLIST}</a>&nbsp; &nbsp;
		<!-- IF S_USER_LOGGED_IN -->
		<a href="{U_ADDGROUP}" title="{L_ADDGROUP}"><img src="{T_THEME_PATH}/images/icon_mini_login.gif" width="12" height="13" alt="*" /> {L_ADDGROUP}</a>&nbsp; &nbsp;<a href="{U_GROUPCP}" title="{L_GROUPCP}"><img src="{T_THEME_PATH}/images/icon_mini_login.gif" width="12" height="13" alt="*" /> {L_GROUPCP}</a>&nbsp; &nbsp;
		<!-- ENDIF -->
		<a href="{U_TOURNAMENTS}" title="{L_TOURNAMENTS}"><img src="{T_THEME_PATH}/images/icon_mini_login.gif" width="12" height="13" alt="*" /> {L_TOURNAMENTS}</a>
		</div>
		<br />]]>
			</action>
		</edit>
	</open>
	<diy-instructions lang="en">
		Be sure to run install_factions/install.php in your browser to complete the rest of the installation.
	</diy-instructions>
</action-group>
</mod>
