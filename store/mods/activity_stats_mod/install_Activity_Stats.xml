				<open src="index.php">
					<edit>
						<find><![CDATA[// Output page
page_header($user->lang['INDEX']);]]></find>
						<action type="before-add"><![CDATA[include($phpbb_root_path . 'includes/functions_activity_stats.' . $phpEx);
activity_mod();
]]></action>
