<action-group>
<open src="includes/message_parser.php">
	<edit>
		<find><![CDATA[		$in = substr($in, 1);
		$close_tags = $error_ary = array();
		$buffer = '';]]>
		</find>
		<action type="after-add"><![CDATA[		$quote_removal = 0;]]>
		</action>
	</edit>
	<edit>
		<find><![CDATA[					// we have found a closing tag
					$out .= array_pop($close_tags) . ']';
					$tok = '[';
					$buffer = '';]]></find>
		<action type="after-add"><![CDATA[					if ($quote_removal)
					{
						$quote_removal --;
						if (!$quote_removal)
						{
							$out = substr($out, 0, $quote_keeplength);
						}
					}]]></action>
	</edit>
	<edit>
		<find><![CDATA[						// there are too many nested quotes
						$error_ary['quote_depth'] = sprintf($user->lang['QUOTE_DEPTH_EXCEEDED'], $config['max_quote_depth']);

						$out .= $buffer . $tok;
						$tok = '[]';
						$buffer = '';

						continue;]]>
		</find>
		<action type="replace-with"><![CDATA[						// there are too many nested quotes
						if (!$quote_removal)
						{
							$quote_keeplength = strlen($out) - 1;
						}
						$quote_removal ++;]]>
		</action>
	</edit>
</open>
</action-group>
</mod>
